<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DonggukTon" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.DonggukTon" parent="Base.Theme.DonggukTon" />

    <style name="Radius8">
        <item name="cornerSize">8dp</item>
    </style>

    <!--  Widget  -->
    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FullButton.Basic" parent="Widget.Material.Button.Basic">
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.FullButton.Basic.Elevation" parent="Widget.FullButton.Basic">
        <item name="android:elevation">5dp</item>
    </style>
</resources>